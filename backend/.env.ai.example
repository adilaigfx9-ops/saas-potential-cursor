# AI Integration Configuration
# Add these variables to your existing .env file

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# AI Budget Management
AI_MONTHLY_BUDGET=50.00
# Monthly spending limit in USD (recommended: $20-100 depending on usage)

# AI Feature Toggles
AI_CONTENT_GENERATION_ENABLED=true
AI_CHAT_SUPPORT_ENABLED=true
AI_SEO_OPTIMIZATION_ENABLED=true
AI_PROPOSAL_GENERATION_ENABLED=true

# AI Performance Settings
AI_CACHE_TTL=86400
# Cache duration in seconds (86400 = 24 hours)

AI_MAX_TOKENS_PER_REQUEST=4000
# Maximum tokens per AI request (higher = more expensive but better quality)

AI_RATE_LIMIT_PER_HOUR=100
# Maximum AI requests per hour per user/IP

AI_QUALITY_THRESHOLD=7.0
# Minimum quality score for auto-approval (1-10 scale)

# AI Model Configuration
OPENAI_MODEL=gpt-4o-mini
# Available models: gpt-4o-mini (cheaper), gpt-4o (better quality)

OPENAI_TEMPERATURE=0.7
# Creativity level (0.0 = deterministic, 1.0 = very creative)

# Advanced AI Settings
AI_ENABLE_FUNCTION_CALLING=false
# Enable advanced AI function calling (requires higher tier)

AI_ENABLE_VISION=false
# Enable image analysis capabilities (requires GPT-4V)

AI_BACKUP_MODEL=gpt-3.5-turbo
# Fallback model if primary model fails

# Monitoring and Logging
AI_LOG_ALL_REQUESTS=true
# Log all AI requests for debugging and cost tracking

AI_ENABLE_ANALYTICS=true
# Enable detailed AI usage analytics

AI_ALERT_BUDGET_THRESHOLD=0.8
# Send alert when 80% of budget is used

# Integration Settings
AI_WEBHOOK_URL=
# Optional webhook URL for AI event notifications

AI_SLACK_WEBHOOK=
# Optional Slack webhook for budget alerts